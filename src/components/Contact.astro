<div class="region bg-gray-200">
  <div class="wrapper center" style="--measure: 70ch;">
    <div class="flow prose" id="contact">
      <h2>Reach out</h2>
      <p>Have a question about a product? Feel free to drop me a line below!</p>
      <form
        name="main"
        netlify-honeypot="bot-field"
        class="switcher"
        method="POST"
        data-netlify="true"
        action="/"
      >
        <input type="hidden" name="subject" value="Form: frankstall.one" />
        <p class="hidden">
          <label for="bot-field">Do you like delicious treats?</label>
          <input
            name="bot-field"
            id="bot-field"
            class="border-gray-700 border-1 border-solid"
          />
        </p>
        <span class="stack">
          <label for="name">Name</label>
          <input
            id="name"
            name="name"
            type="text"
            required
            class="border-gray-700 border-1 border-solid"
          />
        </span>
        <span class="stack">
          <label for="email">Email</label>
          <input
            id="email"
            name="email"
            type="email"
            required
            class="border-gray-700 border-1 border-solid"
          />
        </span>
        <span class="stack">
          <label for="tel">Phone number</label>
          <input
            id="tel"
            name="tel"
            type="tel"
            class="border-gray-700 border-1 border-solid"
          />
        </span>
        <span class="stack">
          <label for="message">Message</label>
          <textarea
            name="message"
            id="message"
            rows="6"
            required
            class="border-gray-700 border-1 border-solid"></textarea>
        </span>
        <button type="submit" class="button">Submit</button>
      </form>
    </div>
  </div>
</div>
