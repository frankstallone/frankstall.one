<div class="region" style="--spot-color: var(--gray-2);">
  <div class="wrapper center" style="--measure: 70ch;">
    <div class="flow prose" id="contact">
      <h2>Reach out</h2>
      <p>Have a question about a product? Feel free to drop me a line below!</p>
      <form
        name="main"
        netlify-honeypot="bot-field"
        class="switcher"
        method="POST"
        data-netlify="true"
        action="/"
      >
        <input type="hidden" name="subject" value="Form: frankstall.one" />
        <p class="hidden">
          <label for="bot-field">Do you like delicious treats?</label>
          <input name="bot-field" id="bot-field" />
        </p>
        <span class="stack">
          <label for="name">Name</label>
          <input id="name" name="name" type="text" required />
        </span>
        <span class="stack">
          <label for="email">Email</label>
          <input id="email" name="email" type="email" required />
        </span>
        <span class="stack">
          <label for="tel">Phone number</label>
          <input id="tel" name="tel" type="tel" />
        </span>
        <span class="stack">
          <label for="message">Message</label>
          <textarea name="message" id="message" rows="6" required></textarea>
        </span>
        <button
          type="submit"
          class="button"
          style="--spot-color: var(--color-loud);">Submit</button
        >
      </form>
    </div>
  </div>
</div>
