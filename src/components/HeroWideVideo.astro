---
import Header from './Header.astro';
import frankstallone from '../assets/2023-Frank-Stallone-Web-Marketing-Expert.png';
import { Picture } from 'astro:assets';
---

<div class="cover" style="--cover-padding: 0;">
  <Header />
  <div class="box text-center">
    <h1 class="center step-5 uppercase">Learn, grow, prosper</h1>
    <h2 class="center font-weight-base" style="margin-block-end: 1rem;">
      Join others in learning about agency, enterprise, and start up actionable
      tips with a design and developer twist.
    </h2>
  </div>
  <div
    style="padding-bottom: 56.21521336%;"
    class="text-center relative overflow-hidden"
  >
    <Picture
      src={frankstallone}
      widths={[501]}
      width={4210}
      height={5456}
      class="object-contain"
      alt="The Internet's favorite Frank Stallone"
      format="avif"
    />
  </div>
</div>
