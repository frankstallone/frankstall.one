---
type Props = {
  idx: number
  question: string
  answer: string
}

const { idx, question, answer } = Astro.props
---

<div class="box flex flex-col bg-gray-200 rounded-md">
  <details open={idx === 0}>
    <summary class="faq-button">
      {question}
      <svg
        class="plus-icon"
        focusable="false"
        aria-hidden="true"
        viewBox="0 0 24 24"
      >
        <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" fill="currentColor"
        ></path>
        <path d="M0 0h24v24H0z" fill="none"></path>
      </svg>
      <svg
        class="minus-icon"
        focusable="false"
        aria-hidden="true"
        viewBox="0 0 24 24"
      >
        <path d="M19 13H5v-2h14v2z" fill="currentColor"></path>
        <path d="M0 0h24v24H0z" fill="none"></path>
      </svg>
    </summary>
    <div class="accordion-body">
      <p>
        {answer}
      </p>
    </div>
  </details>
</div>

<style>
  details > summary {
    list-style: none;
  }
  details > summary::-webkit-details-marker {
    display: none;
  }

  .plus-icon {
    display: inline-block;
  }
  .minus-icon {
    display: none;
  }

  details[open] .plus-icon {
    display: none;
  }
  details[open] .minus-icon {
    display: inline-block;
  }
</style>
