---
import Header from './Header.astro';
import { getImage } from 'astro:assets';
import background from '../assets/frank-stallone-home-header-blank.png';
const { title, subtitle } = Astro.props;

type Props = {
  title: string;
  subtitle?: string;
};

const optimizedBackground = await getImage({ src: background });
const description = subtitle
  ? subtitle
  : 'Sharing actionable tips from my agency, enterprise, start up, and life experience with a design and developer twist.';
---

<div
  class="spot-color-gray-dark"
  id="hero"
  style=`--cover-padding: 0;  background-image: url(${optimizedBackground.src})`
>
  <Header />
  <div class="region wrapper" style="--spot-color: transparent;">
    <div
      class="flex flex-col justify-center flow prose"
      style="color: var(--color-light)"
    >
      <h1 class="step-5">{title}</h1>
      <h2 class="font-weight-base">{description}</h2>
    </div>
  </div>
</div>
