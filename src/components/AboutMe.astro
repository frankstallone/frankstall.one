---
import { Picture } from 'astro:assets'
import frankstallone from '@assets/2023-Frank-Stallone-Web-Marketing-Expert.png'

type Props = {
  variant?: 'default' | 'f4-home'
  sectionIndex?: string
}

const { variant = 'default', sectionIndex = '02' } = Astro.props as Props
---

<div class="region bg-gray-100 text-gray-1400">
  <div class="wrapper">
    <div class="grid" data-layout="f4-home" style="--gutter: var(--space-l);">
      <div class="flow home-section-head">
        {
          variant === 'f4-home' && (
            <p class="home-section-kicker">{sectionIndex}</p>
          )
        }
        <h2 class="text-step-1">About</h2>
        <p class="text-step-00 text-gray-1100">Designer, developer, mentor.</p>
      </div>
      <div class="flow home-about-copy">
        <h3 class="mt-zero">
          I'm a husband, father, designer, developer, and hopeless optimist.
        </h3>
        <p class="text-step-00 text-gray-1200">
          Throughout my career, I've bridged the gap between design and
          development, as well as between marketing and SaaS products, to
          produce stellar user experiences. I enjoy mentoring and have worked in
          lab environments at small and large organizations.
        </p>
      </div>
      <div
        class="home-about-media text-center relative overflow-hidden flex items-end"
      >
        <Picture
          src={frankstallone}
          widths={[300, 800, 2000, frankstallone.width]}
          sizes={`(max-width: 300px) 300px, (max-width: 800px) 800px, (max-width: 1600px) 2000px, ${frankstallone.width}px`}
          class="object-contain h-auto"
          alt="The Internet's favorite Frank Stallone"
          formats={['avif', 'webp']}
        />
      </div>
    </div>
  </div>
</div>
