---
import { Picture } from 'astro:assets';
import frankstallone from '../assets/frank-stallone-logo-2023-04-white@2x.png';
---

<header
  class="cluster box text-center justify-between bg-transparent text-white"
>
  <a href="/">
    <Picture
      src={frankstallone}
      widths={[501]}
      width={140}
      height={13.406}
      class="object-contain"
      alt="The Internet's favorite Frank Stallone"
      format="avif"
    />
  </a>
  <nav>
    <ul
      role="list"
      class="cluster justify-center font-medium font-display"
      style="--gap: var(--space-l);"
    >
      <li class="header-link"><a href="/blog/">Blog</a></li>
      <li class="header-link"><a href="/portfolio/">Portfolio</a></li>
      <li class="header-link"><a href="#contact">Reach out</a></li>
      <li class="header-link">
        <a href="/products/lead-generation-for-small-business"
          >Content compass</a
        >
      </li>
    </ul>
  </nav>
</header>
