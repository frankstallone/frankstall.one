<script>
  import { animate, stagger } from 'motion'

  // Run animation when view transition is complete
  document.addEventListener('astro:page-load', () => {
    const animateNav = async () => {
      // Animate logo first
      animate(
        '#logo-link',
        {
          opacity: [0, 1],
          y: [-20, 0],
        },
        {
          duration: 0.5,
        }
      )

      // Animate nav items with a delay
      setTimeout(() => {
        animate(
          '.nav-item',
          {
            opacity: [0, 1],
            y: [-20, 0],
          },
          {
            duration: 0.5,
            delay: stagger(0.1),
          }
        )
      }, 300) // Start nav items 300ms after logo
    }
    animateNav()
  })
</script>
