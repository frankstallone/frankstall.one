{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["./dist", "./public"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["./src/components/ui/*"],
      "@components/*": ["./src/components/*"],
      "@assets/*": ["./src/assets/*"],
      "@types": ["./src/types/index"],
      "@utils/*": ["src/scripts/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
